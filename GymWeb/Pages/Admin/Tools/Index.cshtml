@page
@model GymWeb.Pages.Tools.IndexModel

<div class="containter p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Tools List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="create" class="btn btn-primary">
				Create New Tool
			</a>
		</div>
	</div>

	<br /><br />

	<table id="DT_load" class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					Tool Name
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach(var obj in Model.Tools)
			{
			<tr>
				<td width="80%">@obj.Name</td>
				<td>
					<div class="w-75 btn-group" role="group">
					<a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
						<i class="bi bi-pencil-square"></i>
					</a>
					<a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
						<i class="bi bi-trash"></i>
					</a>
					</div>
				</td>
			</tr>
			}
		</tbody>
	</table>
</div>

@section Scripts{
	<script src="~/js/table.js"></script>
}